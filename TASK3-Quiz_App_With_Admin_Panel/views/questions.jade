extends layout 
block content 

    p Add Questions

    .questions_form
        form(action="/questions" method="POST")
            label(for="question") Question
            br
            textarea(type="text" name="question", cols="30", rows="10" id="question")
            br  
            label(for="option1") Option 1:  
            input(type="text" name="option1" id="option1")
            br
            label(for="option2") Option 2:  
            input(type="text" name="option2" id="option2")
            br
            label(for="option3") Option 3:  
            input(type="text" name="option3" id="option3")
            br
            label(for="option4") Option 4:  
            input(type="text" name="option4" id="option4")
            br
            label(for="correct") Correct Answer:  
            input(type="text" name="correct" id="correct")
            br
            button(type="submit" class="button-small") Confirm   
            br
